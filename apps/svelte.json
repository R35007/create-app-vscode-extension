{
  "appName": "Svelte",
  "description": "Svelte is a radical new approach to building user interfaces using compiler. In Short Svelte is a complier and not a library",
  "logoPath": "https://raw.githubusercontent.com/R35007/create-app-support/master/images/svelte.png",
  "prerequisites": [
    {
      "label": "node",
      "description": "https://nodejs.org/en/",
      "href": "https://nodejs.org/en/"
    }
  ],
  "commandTemplate": [
    "${fields.useSvelteKit} ${fields.appId};",
    "${fields.useTypescript ? `cd ${fields.appId}; node scripts/setupTypeScript.js;` : ''}",
    "${fields.openInVsCode ? fields.useTypescript ? 'code .' : `code ${fields.get('appId')};` : ''}"
  ],
  "fields": {
    "useSvelteKit": {
      "type": "radio",
      "label": "Create app with Svelte Kit ?",
      "value": "npx degit sveltejs/template",
      "options": [
        { "label": "Yes", "value": "npm init svelte@next" },
        { "label": "No", "value": "npx degit sveltejs/template" }
      ]
    },
    "appId": {
      "label": "App Id",
      "placeholder": "^[a-z]+(-[a-z]+)*$",
      "description": "Must be in lowercase alphabets. No spaces or special chars are allowed except hyphen (-).",
      "value": "hello-world",
      "required": true,
      "pattern": "^[a-z]+(-[a-z]+)*$",
      "errors": {
        "required": "App Id is Required.",
        "pattern": "Invalid pattern. Value must satisfy pattern ^[a-z]+(-[a-z]+)*$"
      }
    },
    "useTypescript": {
      "type": "radio",
      "label": "Use Typescript ?",
      "description": "This option is not applicable If you create the app with Svelte Kit.",
      "options": [{ "label": "Yes", "value": "yes" }, { "label": "No" }]
    },
    "openInVsCode": {
      "type": "checkbox",
      "label": "Open In VSCode ?"
    }
  },
  "additionalCommands": [
    {
      "label": "install degit",
      "description": "Click here to install degit globally",
      "command": "npm install -g degit"
    },
    {
      "label": "create svelte app",
      "description": "Click here to create the svelte app using cli prompts",
      "command": "npx degit sveltejs/template"
    },
    {
      "label": "create svelteKit app",
      "description": "Click here to create the sveltekit app using cli prompts",
      "command": "npm init svelte@next"
    }
  ],
  "resources": [
    {
      "label": "Home Page",
      "href": "https://svelte.dev/"
    },
    {
      "label": "Getting Started with Svelte",
      "href": "https://svelte.dev/docs"
    },
    {
      "label": "Getting Started with SvelteKit",
      "href": "https://kit.svelte.dev/docs"
    },
    {
      "label": "Examples",
      "href": "https://svelte.dev/examples#hello-world"
    },
    {
      "label": "Tutorial",
      "href": "https://svelte.dev/tutorial/basics"
    }
  ],
  "tags": ["compiler", "frontend", "library", "svelte", "sveltekit", "ui", "web", "webapp"]
}
