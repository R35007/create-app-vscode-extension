{
    "appName": "Flask Project",
    "description": "Create a Flask project with optional Docker support.",
    "logoPath": "https://example.com/flask-logo.png",
    "prerequisites": [
        {
            "label": "Python",
            "description": "Python interpreter (version 3.6+)",
            "href": "https://www.python.org/downloads/"
        }
    ],
    "commandTemplate": [
        "${fields.installPrerequisites}",
        "mkdir ${fields.projectName};",
        "cd ${fields.projectName};",
        "${fields.useDocker ? `docker run -d -p 5000:5000 --name ${fields.projectName}-container -v $(pwd):/app ${fields.dockerImage};` : ''}",
        "${fields.openInVsCode ? `code .;` : ''}"
    ],
    "fields": {
        "projectName": {
            "label": "Project Name",
            "type": "textbox",
            "placeholder": "e.g., my-flask-project",
            "description": "The name of the Flask project directory.",
            "required": true
        },
        "dockerImage": {
            "label": "Docker Image",
            "type": "textbox",
            "value": "rapidfort/flaskapp",
            "placeholder": "e.g., flask-app:latest",
            "description": "The Docker image to use for running the Flask application.",
            "required": false
        },
        "useDocker": {
            "label": "Use Docker ?",
            "type": "radio",
            "value": "",
            "options": [
                {
                    "label": "Yes",
                    "value": "yes"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ]
        },
        "installPrerequisites": {
            "label": "Install Prerequisites ?",
            "type": "radio",
            "value": "",
            "options": [
                {
                    "label": "Yes",
                    "value": "python -m venv venv;"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ]
        },
        "openInVsCode": {
            "label": "Open In VSCode ?",
            "type": "radio",
            "value": "",
            "options": [
                {
                    "label": "Yes",
                    "value": "yes"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ]
        }
    },
    "resources": [
        {
            "label": "Flask Documentation",
            "href": "https://flask.palletsprojects.com/"
        }
    ],
    "tags": [
        "flask",
        "python",
        "web"
    ]
}