{
  "name": "create-app",
  "displayName": "Create App",
  "description": "Easily Create any UI App with Official Starter Templates or Boilerplate using CLI",
  "version": "5.1.0",
  "publisher": "Thinker",
  "license": "MIT",
  "icon": "media/images/ca-logo.png",
  "author": {
    "name": "Sivaraman",
    "email": "sendmsg2siva@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/R35007/create-app-vscode-extension"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "Create App",
    "Angular",
    "Express",
    "Electron",
    "Vite",
    "Vue",
    "React",
    "Preact",
    "Svelte",
    "NextJs",
    "Django",
    "Gatsby",
    "NestJs",
    "Node",
    "Ionic",
    "React Native",
    "Vs Code Extension",
    "Create Project"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "create-app.interactive",
        "title": "Interactive",
        "category": "Create App"
      },
      {
        "command": "create-app.quick",
        "title": "Quick",
        "category": "Create App"
      }
    ],
    "configuration": {
      "title": "Create App",
      "properties": {
        "create-app.settings.quick.promptType": {
          "type": "string",
          "enum": [
            "Default",
            "Required",
            "None"
          ],
          "enumDescriptions": [
            "Prompt field config that required or prompt flag is set to true",
            "Prompt only required field config",
            "Don't prompt any field configs"
          ],
          "default": "Default",
          "description": "Set the Create App: Quick command prompt type."
        },
        "create-app.settings.quick.promptCommandString": {
          "type": "boolean",
          "default": true,
          "description": "Prompt for command string change in quick command pallet before executing in terminal."
        },
        "create-app.settings.quick.promptExecutionPath": {
          "type": "boolean",
          "default": true,
          "description": "If false it always executes in the active workspace folder location."
        },
        "create-app.settings.customAppPath": {
          "type": "string",
          "description": "Set custom file or folder path of the custom app json. please restart the vscode to take effect."
        },
        "create-app.settings.customApps": {
          "type": "array",
          "description": "Provide the list of custom app details. please restart the vscode to take effect.",
          "items": {
            "type": "object",
            "properties": {
              "appName": {
                "type": "string"
              },
              "groupNames": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "relatedAppNames": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "hide": {
                "type": "boolean"
              },
              "order": {
                "type": "number"
              },
              "description": {
                "type": "string"
              },
              "logoPath": {
                "type": "string"
              },
              "prerequisites": {
                "type": "array",
                "items": {
                  "type": "object",
                  "oneOf": [
                    {
                      "properties": {
                        "label": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "href": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "label",
                        "description",
                        "href"
                      ]
                    },
                    {
                      "properties": {
                        "label": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "command": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "label",
                        "description",
                        "command"
                      ]
                    }
                  ]
                }
              },
              "commandTemplate": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "fields": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "textbox",
                        "dropdown",
                        "radio",
                        "browse",
                        "checkbox"
                      ]
                    },
                    "label": {
                      "type": "string"
                    },
                    "placeholder": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "order": {
                      "type": "number"
                    },
                    "unCheckedValue": {
                      "type": [
                        "boolean",
                        "string"
                      ]
                    },
                    "checkedValue": {
                      "type": [
                        "boolean",
                        "string"
                      ]
                    },
                    "value": {
                      "type": [
                        "boolean",
                        "string"
                      ]
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "canSelectFile": {
                      "type": "boolean"
                    },
                    "canSelectFolder": {
                      "type": "boolean"
                    },
                    "prompt": {
                      "type": "boolean"
                    },
                    "hide": {
                      "type": "boolean"
                    },
                    "pattern": {
                      "type": "string"
                    },
                    "prefix": {
                      "type": "string"
                    },
                    "suffix": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "object",
                      "examples": [
                        {},
                        {
                          "required": "App Id is Required.",
                          "pattern": "Invalid Id. No spaces or special chars are allowed."
                        }
                      ],
                      "properties": {
                        "required": {
                          "type": "string"
                        },
                        "pattern": {
                          "type": "string"
                        }
                      }
                    },
                    "options": {
                      "type": "array",
                      "examples": [
                        [],
                        [
                          {
                            "label": "provide options only for type dropdown",
                            "value": "--init"
                          }
                        ]
                      ],
                      "items": {
                        "type": "object",
                        "examples": [
                          {},
                          {
                            "label": "provide options only for type dropdown",
                            "value": "--init"
                          }
                        ],
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "label",
                          "value"
                        ]
                      }
                    }
                  },
                  "required": [
                    "label",
                    "type"
                  ],
                  "if": {
                    "properties": {
                      "type": {
                        "enum": [
                          "dropdown",
                          "radio"
                        ]
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "options"
                    ]
                  },
                  "else": {
                    "not": {
                      "required": [
                        "options"
                      ]
                    }
                  }
                }
              },
              "additionalCommands": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "command": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "label",
                    "description",
                    "command"
                  ]
                }
              },
              "resources": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "appName"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.50.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/webview-ui-toolkit": "^0.8.5",
    "bootstrap": "^5.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^7.32.0",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
